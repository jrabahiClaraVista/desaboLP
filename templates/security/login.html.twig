{% extends 'base.html.twig' %}

{% block body_id %}login{% endblock %}
{% block body_class %}login-bg{% endblock %}


{% block body %}
{% if error %}
<div class="alert alert-danger">
    {{ error.messageKey|trans(error.messageData, 'security') }}
</div>
{% endif %}

<div class="container-fluid">
    <div class="row justify-content-center align-items-center flex-row mh-100 justify-content-center">
        <div class="col-lg-8">
            <div class="card-group">
                <div class="card p-4">
                    <div class="card-body">
                        <form action="{{ path('security_login') }}" method="post">
                            <fieldset>
                                <legend class="pb-4">
                                    {{ 'title.login'|trans }}
                                </legend>
                                <p class="text-muted">Sign In to your account</p>
                                <div class="form-group">
                                    <!--label for="username">{{ 'label.username'|trans }}</label-->
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="input1"><i class="fas fa-user"></i></span>
                                        </div>
                                        <input type="text" id="username" class="form-control" name="_username" placeholder="{{ 'label.username'|trans }}" aria-label="{{ 'label.username'|trans }}" aria-describedby="input1" value="{{ last_username }}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <!--label for="password">{{ 'label.password'|trans }}</label-->
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="input2"><i class="fa fa-lock" aria-hidden="true"></i></span>
                                        </div>
                                        <input type="password" id="password" class="form-control" name="_password" placeholder="{{ 'label.password'|trans }}" aria-label="{{ 'label.password'|trans }}" aria-describedby="input2">
                                        <div class="input-group-prepend">
                                            <span data="hidden" type="text" class="input-group-text btn visible_pwd"><i class="fa fa-eye" aria-hidden="true"></i></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me" checked>
                                            Remember Password
                                        </label>
                                    </div>
                                </div>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                                <div class="d-flex flex-row-reverse">
                                    <div class="col-6 text-right p-0">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-sign-in" aria-hidden="true"></i> {{ 'action.sign_in'|trans }}
                                        </button>
                                    </div>
                                    <div class="col-6 p-0">
                                        <button type="button" class="btn btn-link px-0">{{ 'action.forgot_pwd'|trans }}</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
                <div class="card text-white bg-primary py-5 d-md-down-none">
                    <div class="card-body text-center">
                        <div>
                            <h2 class="pb-4">{{ 'title.sign_up'|trans }}</h2>
                            <p>You need an access for our platform ?<br />Create an account quickly and easily !</p>
                            <a href="{{ path('security_register') }}" class="btn btn-primary active mt-3">{{ 'action.create_account'|trans }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}

<script>
$(document).ready(function() {

});
</script>
{% endblock %}
